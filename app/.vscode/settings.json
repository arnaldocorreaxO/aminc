{
  // üîß Formateo autom√°tico al guardar
  "editor.formatOnSave": true,

  // üêç Configuraci√≥n para Python
  "python.formatting.provider": "none", // Deshabilita el formateador por defecto
  "python.formatting.blackArgs": [
    "--line-length",
    "88"
  ],
  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit" // Organiza imports al guardar
    },
    "editor.defaultFormatter": "ms-python.black-formatter" // Usa Black como formateador
  },

  // ‚öôÔ∏è Configuraci√≥n para Prettier en JS, TS, JSON, CSS, HTML
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // üß© Formateo de plantillas Django con djlint
  "djlint.enable": true,
  "djlint.format": true,
  "djlint.useNewLinterOutputParser": false,
  "[django-html]": {
    "editor.defaultFormatter": "monosans.djlint"
  },

  // üß† Recomendaciones adicionales
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/*.pyo": true
  },
  "python.analysis.typeCheckingMode": "basic",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": [
    "--max-line-length=88"
  ],

}
